@import '../prism/*'

.post
  responsive-margin-vertical(20, 80, 5rem)

  &__title
    responsive-font(20, 50, 4em)
    responsive-line-height(1, 1.5, 1.5em)
    margin 0.3em 0

  &__meta
    font-size 0.9em
    font-style italic
    color brown

  &__content
    responsive-margin-vertical(15, 25, 1.5rem)

  &__intro p
    responsive-font(16, 22, 1.2rem)
    font-weight bold

  .gatsby-highlight
    responsive-margin-vertical(20, 30, 3em)
